<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>

<div id="header-container">
  <div id="header">
    <div id="bulletin-board-left-menu">
      <div style="height:42px; float:left;" onclick="showSidebarMenu()">
        <%= image_tag 'icons/menu-1.svg', id:"menu-button", class:"svg", href:"javascript:void(0);", onclick:"showSidebarMenu()"%>
      </div>
      <%= link_to image_tag('icons/speech-bubble-4.svg', id:"header-typeio-button-new", class:"svg"), new_bulletin_board_typeio_path(@bulletin_board)%>
    </div>
    <div id="title-container">
      <% if current_user.bulletin_board == @bulletin_board %> <!-- DISPLAY CORRECT BOARD NAME s-->
      <h1><%=current_user.first_name%>'s Board</h1>
      <% else %>
      <h1><%=@bulletin_board.group.name%>'s Board</h1>
      <%end%>
    </div>
    <div id="bulletin-board-right-menu">
      <div id="header-user-name">
        <i><p>Hello <%=current_user.first_name %> <%=current_user.last_name%>!</p></i>
      </div>
      <div id="header-profile-image">
        <%= image_tag 'icons/user-2.svg', class:"svg"%>
      </div>
    </div>
  </div>
</div>
