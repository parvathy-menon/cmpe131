
<%= render 'header' %>

<% if flash[:notice] %>
    <div class="notice-r"><%= flash[:notice] %></div>
<% end %>

<div id="sorter">
  <div class="sort-likes"><p><%= button_to 'sort by likes', showByLikes_bulletin_board_path(@bulletin_board), method: :get%> 
  <div class="sort-date"><p><%= button_to 'sort by date', bulletin_board_path(@bulletin_board), method: :get%> </p></div>
</p></div>
</div>

<div id="typeio-list">
  <% @typeios.order(:cached_votes_down).each do |typeio| %>
    <div class="typeio-cell">
      <div class="typeio-date"><p><i>On <%= friendly_date(typeio.created_at) %></p></i></div>
      <div class="typeio-subject"><p><%= typeio.subject %></p></div>
      <div class="typeio-body"><p><%= typeio.body %></p></div>
      <div class="typeio-likes"><p><%= typeio.get_likes.size - typeio.get_dislikes.size %></p></div>
      <div id="typeio-button-container">
       <!-- <div class="typeio-button"><p><%= link_to 'Show', typeio %></p></div> -->
        <div class="typeio-button"><p><%= button_to 'Like', like_bulletin_board_typeio_path(:bulletin_board_id => typeio.bulletin_board, :id => typeio), method: :put %></p></div>
        <div class="typeio-button"><p><%= button_to 'Dislike', dislike_bulletin_board_typeio_path(:bulletin_board_id => typeio.bulletin_board, :id => typeio), method: :put %></p></div>
        <div class="typeio-button"><p><%= link_to 'Edit', edit_typeio_path(typeio) %></p></div>
        <div class="typeio-button"><p><%= link_to 'Comments', typeio_comments_path(typeio)%></p></div>
        <div class="typeio-delete-button"><p><%= link_to 'Destroy', typeio, method: :delete, data: { confirm: 'Are you sure?' } %></p></div>

      </div>
    </div>
  <% end %>
</div>
