<p id="notice"><%= notice %></p>

<h1>Listing Typeios</h1>

<div id="typeio-list-container">
    <div id="typeio-list-info">
      <div><b>Username</b></div>
      <div><b>Body</b></div>
      <div><b>Created</b></div>
    </div>

  <div id="typeio-list">
    <% @typeios.each do |typeio| %>
      <div class="typeio-cell">
        <div class="typeio-list-username"><p><%= typeio.username %></p></div>
        <div class="typeio-list-body"><p><%= typeio.body %></p></div>
        <div class="typeio-list-date"><p><%= friendly_date(typeio.created_at) %></p></div>
        <div class="typeio-button"><p><%= link_to 'Show', typeio %></p></div>
        <div class="typeio-button"><p><%= link_to 'Edit', edit_typeio_path(typeio) %></p></div>
        <div class="typeio-button"><p><%= link_to 'Destroy', typeio, method: :delete, data: { confirm: 'Are you sure?' } %></p></div>
      </div>
      <br>
    <% end %>
  </div>
  <div class="typeio-button-new"><p><%= link_to 'New Typeio', new_typeio_path %></p></div>
</div>

<br>
